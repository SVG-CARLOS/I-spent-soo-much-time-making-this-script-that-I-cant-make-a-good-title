-- TAB 4: EXTRAS
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local extrasTab = tabContents["Extras"]

createActionButton(extrasTab, "ğŸ“Š Print Performance Stats", "Outputs stats to the dev console", 1, Color3.fromRGB(100, 100, 200), function()
	local partCount = 0
	local meshCount = 0
	local particleCount = 0
	local soundCount = 0
	local lightCount = 0
	
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("BasePart") then partCount += 1 end
		if obj:IsA("MeshPart") or obj:IsA("SpecialMesh") then meshCount += 1 end
		if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Beam") then particleCount += 1 end
		if obj:IsA("Sound") then soundCount += 1 end
		if obj:IsA("Light") then lightCount += 1 end
	end
	
	print("â•â•â• VORTEX PERFORMANCE REPORT â•â•â•")
	print("Parts: " .. partCount)
	print("Meshes: " .. meshCount)
	print("Particles/Trails/Beams: " .. particleCount)
	print("Sounds: " .. soundCount)
	print("Lights: " .. lightCount)
	print("Total Descendants: " .. #game.Workspace:GetDescendants())
	print("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
end)

createActionButton(extrasTab, "ğŸ’€ NUCLEAR MODE", "Maximum FPS: strips EVERYTHING possible", 2, Color3.fromRGB(255, 40, 40), function()
	-- Textures
	removeTextures(true)
	-- Shadows
	disableShadows(true)
	-- Particles
	reduceParticles(true)
	-- Lighting
	reduceLighting(true)
	-- Post FX
	disablePostProcessing(true)
	-- Meshes
	simplifyMeshes(true)
	-- Materials
	lowQualityMaterials(true)
	-- Sounds
	reduceSounds(true)
	-- Quality
	settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
	
	-- Extra: disable all lights
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("Light") then
			obj.Enabled = false
		end
	end
	
	Lighting.Brightness = 2
	Lighting.Ambient = Color3.fromRGB(200, 200, 200)
	Lighting.OutdoorAmbient = Color3.fromRGB(200, 200, 200)
end)

createActionButton(extrasTab, "â™»ï¸ FULL RESTORE", "Undo all optimizations & restore defaults", 3, Color3.fromRGB(40, 200, 80), function()
	-- Restore textures
	removeTextures(false)
	-- Restore particles
	reduceParticles(false)
	-- Restore lighting
	Lighting.Brightness = originalLighting.Brightness
	Lighting.GlobalShadows = originalLighting.GlobalShadows
	Lighting.FogEnd = originalLighting.FogEnd
	Lighting.FogStart = originalLighting.FogStart
	Lighting.Ambient = originalLighting.Ambient
	Lighting.OutdoorAmbient = originalLighting.OutdoorAmbient
	Lighting.EnvironmentDiffuseScale = originalLighting.EnvironmentDiffuseScale
	Lighting.EnvironmentSpecularScale = originalLighting.EnvironmentSpecularScale
	
	for _, obj in ipairs(Lighting:GetChildren()) do
		if obj:IsA("PostEffect") then obj.Enabled = true end
		if obj.Name:find("Vortex") then obj:Destroy() end
	end
	
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("Light") then obj.Enabled = true end
		if obj:IsA("BasePart") then obj.CastShadow = true end
	end
	
	settings().Rendering.QualityLevel = Enum.QualityLevel.Automatic
end)

createToggle(extrasTab, "ğŸ”’ Anti-AFK", "Prevents idle kick by simulating input", 4, function(enabled)
	if enabled then
		local vu = game:GetService("VirtualUser")
		State._antiAfk = RunService.Stepped:Connect(function()
			vu:CaptureController()
			vu:ClickButton2(Vector2.new())
		end)
	else
		if State._antiAfk then
			State._antiAfk:Disconnect()
			State._antiAfk = nil
		end
	end
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- FPS COUNTER
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local frameCount = 0
local lastTime = tick()

RunService.RenderStepped:Connect(function()
	frameCount += 1
	local now = tick()
	if now - lastTime >= 1 then
		local fps = math.floor(frameCount / (now - lastTime))
		fpsLabel.Text = fps .. " FPS"
		
		if fps >= 50 then
			fpsLabel.TextColor3 = Color3.fromRGB(130, 255, 150)
			fpsLabel.BackgroundColor3 = Color3.fromRGB(30, 200, 80)
		elseif fps >= 30 then
			fpsLabel.TextColor3 = Color3.fromRGB(255, 220, 100)
			fpsLabel.BackgroundColor3 = Color3.fromRGB(200, 160, 30)
		else
			fpsLabel.TextColor3 = Color3.fromRGB(255, 120, 120)
			fpsLabel.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
		end
		
		frameCount = 0
		lastTime = now
	end
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- MINIMIZE / TOGGLE
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local minimized = false
closeBtn.MouseButton1Click:Connect(function()
	minimized = not minimized
	if minimized then
		TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
			Size = UDim2.new(0, 420, 0, 45)
		}):Play()
		closeBtn.Text = "+"
		for _, content in pairs(tabContents) do
			content.Visible = false
		end
		tabBar.Visible = false
		separator.Visible = false
	else
		TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
			Size = UDim2.new(0, 420, 0, 480)
		}):Play()
		closeBtn.Text = "â€”"
		tabBar.Visible = true
		separator.Visible = true
		task.wait(0.3)
		switchTab(State.currentTab)
	end
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- ANIMATED TITLE GRADIENT
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local gradOffset = 0
RunService.RenderStepped:Connect(function(dt)
	gradOffset = (gradOffset + dt * 0.3) % 1
	titleGradient.Offset = Vector2.new(gradOffset, 0)
end)
titleGradient.Parent = titleLabel

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- AUTO-OPTIMIZE NEW DESCENDANTS (LIVE)
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
game.Workspace.DescendantAdded:Connect(function(obj)
	task.wait()
	if State.texturesRemoved then
		if obj:IsA("Texture") or obj:IsA("Decal") then
			obj.Transparency = 1
		end
	end
	if State.particlesDisabled then
		if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Beam") or obj:IsA("Fire") or obj:IsA("Smoke") or obj:IsA("Sparkles") then
			obj.Enabled = false
		end
	end
	if State.shadowsDisabled then
		if obj:IsA("BasePart") then
			obj.CastShadow = false
		end
	end
end)

print("âš¡ VORTEX OPTIMIZER v2.0 loaded successfully!")
