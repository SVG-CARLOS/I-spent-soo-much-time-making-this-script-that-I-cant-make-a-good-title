-- TAB SYSTEM
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local tabNames = {"Performance", "Visuals", "Shaders", "Extras"}
local tabButtons = {}
local tabContents = {}

local tabBar = Instance.new("Frame")
tabBar.Name = "TabBar"
tabBar.Size = UDim2.new(1, -20, 0, 32)
tabBar.Position = UDim2.new(0, 10, 0, 52)
tabBar.BackgroundTransparency = 1
tabBar.Parent = mainFrame

local tabLayout = Instance.new("UIListLayout")
tabLayout.FillDirection = Enum.FillDirection.Horizontal
tabLayout.Padding = UDim.new(0, 4)
tabLayout.Parent = tabBar

for i, name in ipairs(tabNames) do
	local tabBtn = Instance.new("TextButton")
	tabBtn.Name = name
	tabBtn.Size = UDim2.new(0, 95, 1, 0)
	tabBtn.BackgroundColor3 = i == 1 and Color3.fromRGB(50, 80, 200) or Color3.fromRGB(25, 25, 40)
	tabBtn.Text = name
	tabBtn.TextColor3 = i == 1 and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(140, 140, 170)
	tabBtn.TextSize = 12
	tabBtn.Font = Enum.Font.GothamBold
	tabBtn.BorderSizePixel = 0
	tabBtn.Parent = tabBar

	local tc = Instance.new("UICorner")
	tc.CornerRadius = UDim.new(0, 8)
	tc.Parent = tabBtn

	tabButtons[name] = tabBtn

	-- Content ScrollFrame
	local content = Instance.new("ScrollingFrame")
	content.Name = name .. "Content"
	content.Size = UDim2.new(1, -20, 1, -100)
	content.Position = UDim2.new(0, 10, 0, 90)
	content.BackgroundTransparency = 1
	content.ScrollBarThickness = 3
	content.ScrollBarImageColor3 = Color3.fromRGB(80, 120, 255)
	content.BorderSizePixel = 0
	content.CanvasSize = UDim2.new(0, 0, 0, 0)
	content.AutomaticCanvasSize = Enum.AutomaticSize.Y
	content.Visible = (i == 1)
	content.Parent = mainFrame

	local contentLayout = Instance.new("UIListLayout")
	contentLayout.Padding = UDim.new(0, 6)
	contentLayout.SortOrder = Enum.SortOrder.LayoutOrder
	contentLayout.Parent = content

	local contentPadding = Instance.new("UIPadding")
	contentPadding.PaddingTop = UDim.new(0, 4)
	contentPadding.Parent = content

	tabContents[name] = content
end

-- Switch Tabs Function
local function switchTab(tabName)
	State.currentTab = tabName
	for name, btn in pairs(tabButtons) do
		if name == tabName then
			TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 80, 200)}):Play()
			btn.TextColor3 = Color3.fromRGB(255, 255, 255)
			tabContents[name].Visible = true
		else
			TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(25, 25, 40)}):Play()
			btn.TextColor3 = Color3.fromRGB(140, 140, 170)
			tabContents[name].Visible = false
		end
	end
end

for name, btn in pairs(tabButtons) do
	btn.MouseButton1Click:Connect(function()
		switchTab(name)
	end)
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- TOGGLE BUTTON FACTORY
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local function createToggle(parent, text, description, layoutOrder, callback)
	local holder = Instance.new("Frame")
	holder.Size = UDim2.new(1, 0, 0, 52)
	holder.BackgroundColor3 = Color3.fromRGB(20, 20, 32)
	holder.BorderSizePixel = 0
	holder.LayoutOrder = layoutOrder
	holder.Parent = parent

	local hCorner = Instance.new("UICorner")
	hCorner.CornerRadius = UDim.new(0, 8)
	hCorner.Parent = holder

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, -80, 0, 22)
	label.Position = UDim2.new(0, 12, 0, 6)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.fromRGB(220, 225, 255)
	label.TextSize = 13
	label.Font = Enum.Font.GothamBold
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = holder

	local desc = Instance.new("TextLabel")
	desc.Size = UDim2.new(1, -80, 0, 16)
	desc.Position = UDim2.new(0, 12, 0, 28)
	desc.BackgroundTransparency = 1
	desc.Text = description
	desc.TextColor3 = Color3.fromRGB(100, 105, 130)
	desc.TextSize = 10
	desc.Font = Enum.Font.Gotham
	desc.TextXAlignment = Enum.TextXAlignment.Left
	desc.Parent = holder

	-- Toggle Switch
	local toggleBg = Instance.new("Frame")
	toggleBg.Size = UDim2.new(0, 44, 0, 22)
	toggleBg.Position = UDim2.new(1, -56, 0.5, -11)
	toggleBg.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
	toggleBg.BorderSizePixel = 0
	toggleBg.Parent = holder

	local toggleBgCorner = Instance.new("UICorner")
	toggleBgCorner.CornerRadius = UDim.new(1, 0)
	toggleBgCorner.Parent = toggleBg

	local toggleCircle = Instance.new("Frame")
	toggleCircle.Size = UDim2.new(0, 18, 0, 18)
	toggleCircle.Position = UDim2.new(0, 2, 0, 2)
	toggleCircle.BackgroundColor3 = Color3.fromRGB(150, 150, 170)
	toggleCircle.BorderSizePixel = 0
	toggleCircle.Parent = toggleBg

	local circleCorner = Instance.new("UICorner")
	circleCorner.CornerRadius = UDim.new(1, 0)
	circleCorner.Parent = toggleCircle

	local toggled = false

	local toggleBtn = Instance.new("TextButton")
	toggleBtn.Size = UDim2.new(1, 0, 1, 0)
	toggleBtn.BackgroundTransparency = 1
	toggleBtn.Text = ""
	toggleBtn.Parent = toggleBg

	toggleBtn.MouseButton1Click:Connect(function()
		toggled = not toggled
		if toggled then
			TweenService:Create(toggleBg, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 180, 100)}):Play()
			TweenService:Create(toggleCircle, TweenInfo.new(0.2), {Position = UDim2.new(0, 24, 0, 2), BackgroundColor3 = Color3.fromRGB(255, 255, 255)}):Play()
		else
			TweenService:Create(toggleBg, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 55)}):Play()
			TweenService:Create(toggleCircle, TweenInfo.new(0.2), {Position = UDim2.new(0, 2, 0, 2), BackgroundColor3 = Color3.fromRGB(150, 150, 170)}):Play()
		end
		callback(toggled)
	end)

	return holder
end

-- Action Button Factory
local function createActionButton(parent, text, description, layoutOrder, color, callback)
	local holder = Instance.new("Frame")
	holder.Size = UDim2.new(1, 0, 0, 52)
	holder.BackgroundColor3 = Color3.fromRGB(20, 20, 32)
	holder.BorderSizePixel = 0
	holder.LayoutOrder = layoutOrder
	holder.Parent = parent

	local hCorner = Instance.new("UICorner")
	hCorner.CornerRadius = UDim.new(0, 8)
	hCorner.Parent = holder

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, -100, 0, 22)
	label.Position = UDim2.new(0, 12, 0, 6)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.fromRGB(220, 225, 255)
	label.TextSize = 13
	label.Font = Enum.Font.GothamBold
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = holder

	local desc = Instance.new("TextLabel")
	desc.Size = UDim2.new(1, -100, 0, 16)
	desc.Position = UDim2.new(0, 12, 0, 28)
	desc.BackgroundTransparency = 1
	desc.Text = description
	desc.TextColor3 = Color3.fromRGB(100, 105, 130)
	desc.TextSize = 10
	desc.Font = Enum.Font.Gotham
	desc.TextXAlignment = Enum.TextXAlignment.Left
	desc.Parent = holder

	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 70, 0, 26)
	btn.Position = UDim2.new(1, -82, 0.5, -13)
	btn.BackgroundColor3 = color
	btn.Text = "RUN"
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.TextSize = 11
	btn.Font = Enum.Font.GothamBold
	btn.BorderSizePixel = 0
	btn.Parent = holder

	local btnCorner = Instance.new("UICorner")
	btnCorner.CornerRadius = UDim.new(0, 6)
	btnCorner.Parent = btn

	btn.MouseButton1Click:Connect(function()
		btn.Text = "..."
		callback()
		task.wait(0.5)
		btn.Text = "âœ“ DONE"
		task.wait(1)
		btn.Text = "RUN"
	end)

	return holder
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- OPTIMIZATION FUNCTIONS
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local function removeTextures(enabled)
	State.texturesRemoved = enabled
	if enabled then
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("Texture") or obj:IsA("Decal") then
				obj.Transparency = 1
			end
		end
	else
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("Texture") or obj:IsA("Decal") then
				obj.Transparency = 0
			end
		end
	end
end

local function disableShadows(enabled)
	State.shadowsDisabled = enabled
	Lighting.GlobalShadows = not enabled
	if enabled then
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("BasePart") then
				obj.CastShadow = false
			end
		end
	end
end

local function reduceParticles(enabled)
	State.particlesDisabled = enabled
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Beam") or obj:IsA("Fire") or obj:IsA("Smoke") or obj:IsA("Sparkles") then
			obj.Enabled = not enabled
		end
	end
end

local function reduceLighting(enabled)
	State.lightingReduced = enabled
	if enabled then
		Lighting.GlobalShadows = false
		Lighting.FogEnd = 100000
		Lighting.Brightness = 2
		Lighting.EnvironmentDiffuseScale = 0
		Lighting.EnvironmentSpecularScale = 0

		for _, obj in ipairs(Lighting:GetDescendants()) do
			if obj:IsA("BloomEffect") or obj:IsA("BlurEffect") or obj:IsA("SunRaysEffect") or obj:IsA("DepthOfFieldEffect") or obj:IsA("ColorCorrectionEffect") then
				obj.Enabled = false
			end
		end
	else
		Lighting.GlobalShadows = originalLighting.GlobalShadows
		Lighting.FogEnd = originalLighting.FogEnd
		Lighting.Brightness = originalLighting.Brightness
		Lighting.EnvironmentDiffuseScale = originalLighting.EnvironmentDiffuseScale
		Lighting.EnvironmentSpecularScale = originalLighting.EnvironmentSpecularScale

		for _, obj in ipairs(Lighting:GetDescendants()) do
			if obj:IsA("BloomEffect") or obj:IsA("BlurEffect") or obj:IsA("SunRaysEffect") or obj:IsA("DepthOfFieldEffect") or obj:IsA("ColorCorrectionEffect") then
				obj.Enabled = true
			end
		end
	end
end

local function simplifyMeshes(enabled)
	if enabled then
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("MeshPart") then
				obj.TextureID = ""
			end
			if obj:IsA("SpecialMesh") then
				obj.TextureId = ""
			end
		end
	end
end

local function reduceRenderDistance()
	local cam = game.Workspace.CurrentCamera
	if cam then
		-- Set far clipping to reduce distant rendering
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("BasePart") then
				local dist = (obj.Position - (cam.CFrame.Position)).Magnitude
				if dist > 500 then
					obj.LocalTransparencyModifier = 1
				end
			end
		end
	end
end

local function cleanWorkspace()
	local count = 0
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("Texture") or obj:IsA("Decal") then
			obj.Transparency = 1
			count += 1
		end
		if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Fire") or obj:IsA("Smoke") or obj:IsA("Sparkles") then
			obj.Enabled = false
			count += 1
		end
		if obj:IsA("Sound") then
			if obj.Playing and not obj:IsDescendantOf(player.Character or Instance.new("Folder")) then
				obj.Volume = 0
				count += 1
			end
		end
	end
	return count
end

local function disablePostProcessing(enabled)
	for _, obj in ipairs(Lighting:GetChildren()) do
		if obj:IsA("PostEffect") then
			obj.Enabled = not enabled
		end
	end
	-- Also check Camera
	local cam = game.Workspace.CurrentCamera
	if cam then
		for _, obj in ipairs(cam:GetChildren()) do
			if obj:IsA("PostEffect") then
				obj.Enabled = not enabled
			end
		end
	end
end

local function reduceSounds(enabled)
	State.soundsReduced = enabled
	for _, obj in ipairs(game.Workspace:GetDescendants()) do
		if obj:IsA("Sound") then
			if enabled then
				obj.Volume = math.clamp(obj.Volume * 0.1, 0, 0.3)
			end
		end
	end
end

local function lowQualityMaterials(enabled)
	if enabled then
		local settings = UserSettings()
		local gs = settings.GameSettings
		gs.SavedQualityLevel = Enum.SavedQualitySetting.QualityLevel1
		
		for _, obj in ipairs(game.Workspace:GetDescendants()) do
			if obj:IsA("BasePart") then
				obj.Material = Enum.Material.SmoothPlastic
			end
		end
	end
end

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- TAB 1: PERFORMANCE
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local perfTab = tabContents["Performance"]

createToggle(perfTab, "ğŸ–¼ï¸ Remove Textures & Decals", "Hides all textures for cleaner rendering", 1, removeTextures)
createToggle(perfTab, "ğŸŒ‘ Disable Shadows", "Removes all shadow casting globally", 2, disableShadows)
createToggle(perfTab, "âœ¨ Disable Particles & Effects", "Kills particles, trails, beams, fire, smoke", 3, reduceParticles)
createToggle(perfTab, "ğŸ”Š Reduce Ambient Sounds", "Lowers non-essential game sounds", 4, reduceSounds)
createToggle(perfTab, "ğŸ§± Low Quality Materials", "Sets all parts to SmoothPlastic", 5, lowQualityMaterials)

createActionButton(perfTab, "ğŸ§¹ Deep Clean Workspace", "One-click nuke: textures + particles + sounds", 6, Color3.fromRGB(200, 60, 60), function()
	cleanWorkspace()
end)

createActionButton(perfTab, "ğŸ“‰ Set Quality Level 1", "Forces minimum graphics quality", 7, Color3.fromRGB(180, 120, 30), function()
	settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- TAB 2: VISUALS
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local visTab = tabContents["Visuals"]

createToggle(visTab, "ğŸ’¡ Simplify Lighting", "Removes bloom, blur, sun rays, DOF", 1, reduceLighting)
createToggle(visTab, "ğŸ¬ Disable Post-Processing", "Turns off all PostEffect instances", 2, disablePostProcessing)
createToggle(visTab, "ğŸ”³ Strip Mesh Textures", "Removes textures from MeshParts", 3, function(enabled) simplifyMeshes(enabled) end)

createActionButton(visTab, "â˜€ï¸ Bright Flat Lighting", "Clean bright look, no distractions", 4, Color3.fromRGB(60, 140, 220), function()
	Lighting.Brightness = 3
	Lighting.Ambient = Color3.fromRGB(180, 180, 190)
	Lighting.OutdoorAmbient = Color3.fromRGB(180, 180, 190)
	Lighting.GlobalShadows = false
	Lighting.FogEnd = 100000
	Lighting.ClockTime = 14
	Lighting.EnvironmentDiffuseScale = 0
	Lighting.EnvironmentSpecularScale = 0
	for _, obj in ipairs(Lighting:GetChildren()) do
		if obj:IsA("PostEffect") then obj.Enabled = false end
	end
end)

createActionButton(visTab, "ğŸŒ™ Chill Night Mode", "Easy on the eyes, dark ambient", 5, Color3.fromRGB(80, 60, 180), function()
	Lighting.Brightness = 0.5
	Lighting.Ambient = Color3.fromRGB(30, 30, 50)
	Lighting.OutdoorAmbient = Color3.fromRGB(25, 25, 45)
	Lighting.GlobalShadows = false
	Lighting.ClockTime = 0
	Lighting.FogEnd = 100000

	-- Add subtle color correction
	local existing = Lighting:FindFirstChild("VortexNightCC")
	if not existing then
		local cc = Instance.new("ColorCorrectionEffect")
		cc.Name = "VortexNightCC"
		cc.Brightness = -0.05
		cc.Contrast = 0.1
		cc.Saturation = -0.2
		cc.TintColor = Color3.fromRGB(200, 200, 255)
		cc.Parent = Lighting
	end
end)

createActionButton(visTab, "ğŸ”„ Restore Original Lighting", "Reverts lighting to original state", 6, Color3.fromRGB(60, 180, 80), function()
	Lighting.Brightness = originalLighting.Brightness
	Lighting.GlobalShadows = originalLighting.GlobalShadows
	Lighting.FogEnd = originalLighting.FogEnd
	Lighting.FogStart = originalLighting.FogStart
	Lighting.EnvironmentDiffuseScale = originalLighting.EnvironmentDiffuseScale
	Lighting.EnvironmentSpecularScale = originalLighting.EnvironmentSpecularScale
	Lighting.Ambient = originalLighting.Ambient
	Lighting.OutdoorAmbient = originalLighting.OutdoorAmbient

	local nightCC = Lighting:FindFirstChild("VortexNightCC")
	if nightCC then nightCC:Destroy() end

	for _, obj in ipairs(Lighting:GetChildren()) do
		if obj:IsA("PostEffect") then obj.Enabled = true end
	end
end)

