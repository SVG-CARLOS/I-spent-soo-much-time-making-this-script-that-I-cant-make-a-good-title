-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- HEARTBEAT (Freecam, Orbit)
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
RunService.RenderStepped:Connect(function(dt)
    -- FREECAM
    if Studio.FreecamOn and not Studio.OrbitOn then
        local speed = Studio.FreecamSpeed * 60 * dt
        local cf = Camera.CFrame
        local move = Vector3.zero

        if not IsMobile then
            if UIS:IsKeyDown(Enum.KeyCode.W) then move = move + cf.LookVector end
            if UIS:IsKeyDown(Enum.KeyCode.S) then move = move - cf.LookVector end
            if UIS:IsKeyDown(Enum.KeyCode.A) then move = move - cf.RightVector end
            if UIS:IsKeyDown(Enum.KeyCode.D) then move = move + cf.RightVector end
            if UIS:IsKeyDown(Enum.KeyCode.E) then move = move + Vector3.new(0, 1, 0) end
            if UIS:IsKeyDown(Enum.KeyCode.Q) then move = move - Vector3.new(0, 1, 0) end

            -- Speed boost
            if UIS:IsKeyDown(Enum.KeyCode.LeftShift) then
                move = move * 3
            end
        end

        if move.Magnitude > 0 then
            Camera.CFrame = cf + move.Unit * speed
        end
    end

    -- ORBIT
    if Studio.OrbitOn then
        local root = GetRoot()
        if root then
            Studio.OrbitAngle = Studio.OrbitAngle + Studio.OrbitSpeed * dt
            local x = math.cos(Studio.OrbitAngle) * Studio.OrbitDist
            local z = math.sin(Studio.OrbitAngle) * Studio.OrbitDist
            local center = root.Position + Vector3.new(0, Studio.OrbitHeight, 0)
            local camPos = center + Vector3.new(x, 0, z)
            Camera.CFrame = CFrame.lookAt(camPos, center)
        end
    end
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- KEYBINDS
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
UIS.InputBegan:Connect(function(inp, gp)
    if gp then return end
    if inp.KeyCode == Enum.KeyCode.RightControl or inp.KeyCode == Enum.KeyCode.Backquote then
        Main.Visible = not Main.Visible
    end
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- MINIMIZE & CLOSE
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
MinB.MouseButton1Click:Connect(function()
    panelMin = not panelMin
    TW(Main, {Size = UDim2.new(0, W, 0, panelMin and 48 or H)}, 0.35, Enum.EasingStyle.Back)
    MinB.Text = panelMin and "+" or "â€”"
    if panelMin then
        ContentArea.Visible = false
        TabFrame.Visible = false
    else
        task.delay(0.15, function()
            ContentArea.Visible = true
            TabFrame.Visible = true
        end)
    end
end)

ClsB.MouseButton1Click:Connect(function()
    -- Cleanup
    ClearShaderEffects()
    for k, v in pairs(OrigLighting) do pcall(function() Lighting[k] = v end) end
    if Studio.GreenScreen then Studio.GreenScreen:Destroy() end
    for _, obj in pairs(workspace:GetChildren()) do
        if obj.Name:sub(1, 6) == "Studio" or obj.Name:sub(1, 11) == "StudioProp_" then obj:Destroy() end
    end
    Camera.CameraType = Enum.CameraType.Custom
    Camera.FieldOfView = 70
    pcall(function() StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, true) end)

    -- Restore poses
    if Studio.PoseMode then
        for jn, oc in pairs(Studio.OriginalC0) do
            local j = FindJoint(jn)
            if j then j.C0 = oc end
        end
        local char = GetChar()
        if char then
            local anim = char:FindFirstChild("Animate")
            if anim then anim.Disabled = false end
        end
    end

    -- Remove overlays
    for _, n in pairs({"RECIndicator","ThirdsOverlay","CenterCross","CineTop","CineBottom","Watermark"}) do
        local o = Gui:FindFirstChild(n)
        if o then o:Destroy() end
    end

    TW(Main, {Position = UDim2.new(0.5, -W/2, 1, 50)}, 0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In)
    task.delay(0.55, function() Gui:Destroy() end)
end)

-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
-- MOBILE TOGGLE
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
if IsMobile then
    local mob = Instance.new("TextButton")
    mob.Size = UDim2.new(0, 40, 0, 40)
    mob.Position = UDim2.new(1, -48, 0, 6)
    mob.BackgroundColor3 = TH.Card
    mob.BackgroundTransparency = 0.1
    mob.Text = "ğŸ¬"
    mob.Font = Enum.Font.GothamBold
    mob.TextSize = 20
    mob.TextColor3 = TH.Accent
    mob.AutoButtonColor = false
    mob.ZIndex = 100
    mob.Parent = Gui
    Corner(mob, 10)
    Stroke(mob, 1, TH.Accent, 0.4)

    local vis = true
    mob.MouseButton1Click:Connect(function()
        vis = not vis; Main.Visible = vis
    end)
end

