-- R15 joint names and their parent parts
local R15Joints = {
    {name = "Right Arm", joint = "RightShoulder", parent = "RightUpperArm", label = "ğŸ’ª Right Arm"},
    {name = "Left Arm", joint = "LeftShoulder", parent = "LeftUpperArm", label = "ğŸ’ª Left Arm"},
    {name = "Right Leg", joint = "RightHip", parent = "RightUpperLeg", label = "ğŸ¦µ Right Leg"},
    {name = "Left Leg", joint = "LeftHip", parent = "LeftUpperLeg", label = "ğŸ¦µ Left Leg"},
    {name = "Head", joint = "Neck", parent = "Head", label = "ğŸ—£ï¸ Head"},
    {name = "Torso", joint = "Waist", parent = "UpperTorso", label = "ğŸ« Torso"},
    {name = "Right Elbow", joint = "RightElbow", parent = "RightLowerArm", label = "ğŸ’ª R. Elbow"},
    {name = "Left Elbow", joint = "LeftElbow", parent = "LeftLowerArm", label = "ğŸ’ª L. Elbow"},
    {name = "Right Knee", joint = "RightKnee", parent = "RightLowerLeg", label = "ğŸ¦µ R. Knee"},
    {name = "Left Knee", joint = "LeftKnee", parent = "LeftLowerLeg", label = "ğŸ¦µ L. Knee"},
}

local function FindJoint(jointName)
    local char = GetChar()
    if not char then return nil end
    for _, desc in pairs(char:GetDescendants()) do
        if desc:IsA("Motor6D") and desc.Name == jointName then
            return desc
        end
    end
    return nil
end

local function SaveOrigC0(jointName)
    if not Studio.OriginalC0[jointName] then
        local joint = FindJoint(jointName)
        if joint then
            Studio.OriginalC0[jointName] = joint.C0
        end
    end
end

Toggle(ps, "Enable Pose Mode", "ğŸ­", 3, function(on)
    Studio.PoseMode = on
    if on then
        -- Stop default animate
        local char = GetChar()
        if char then
            local anim = char:FindFirstChild("Animate")
            if anim then anim.Disabled = true end
            local hum = GetHum()
            if hum then
                local animator = hum:FindFirstChildOfClass("Animator")
                if animator then
                    for _, t in pairs(animator:GetPlayingAnimationTracks()) do
                        t:Stop(0)
                    end
                end
            end
        end
        -- Save all original C0s
        Studio.OriginalC0 = {}
        for _, jd in ipairs(R15Joints) do
            SaveOrigC0(jd.joint)
        end
        Notify("ğŸ­ Pose Mode ON", "Animations paused, adjust limbs!", 3, TH.Accent)
    else
        -- Restore
        for jointName, origC0 in pairs(Studio.OriginalC0) do
            local joint = FindJoint(jointName)
            if joint then joint.C0 = origC0 end
        end
        local char = GetChar()
        if char then
            local anim = char:FindFirstChild("Animate")
            if anim then anim.Disabled = false end
        end
        Notify("ğŸ­ Pose Mode OFF", "Animations restored", 2, TH.Bad)
    end
end)

local ord = 4
for _, jd in ipairs(R15Joints) do
    Section(ps, jd.label, ord)
    ord = ord + 1

    MakeSlider(ps, "Rotate X", "â†•ï¸", -180, 180, 0, 5, ord, function(v)
        if not Studio.PoseMode then return end
        SaveOrigC0(jd.joint)
        local joint = FindJoint(jd.joint)
        if joint and Studio.OriginalC0[jd.joint] then
            local cur = Studio.PosedParts[jd.joint] or {x = 0, y = 0, z = 0}
            cur.x = v
            Studio.PosedParts[jd.joint] = cur
            joint.C0 = Studio.OriginalC0[jd.joint] * CFrame.Angles(math.rad(cur.x), math.rad(cur.y), math.rad(cur.z))
        end
    end)
    ord = ord + 1

    MakeSlider(ps, "Rotate Y", "â†”ï¸", -180, 180, 0, 5, ord, function(v)
        if not Studio.PoseMode then return end
        SaveOrigC0(jd.joint)
        local joint = FindJoint(jd.joint)
        if joint and Studio.OriginalC0[jd.joint] then
            local cur = Studio.PosedParts[jd.joint] or {x = 0, y = 0, z = 0}
            cur.y = v
            Studio.PosedParts[jd.joint] = cur
            joint.C0 = Studio.OriginalC0[jd.joint] * CFrame.Angles(math.rad(cur.x), math.rad(cur.y), math.rad(cur.z))
        end
    end)
    ord = ord + 1

    MakeSlider(ps, "Rotate Z", "ğŸ”„", -180, 180, 0, 5, ord, function(v)
        if not Studio.PoseMode then return end
        SaveOrigC0(jd.joint)
        local joint = FindJoint(jd.joint)
        if joint and Studio.OriginalC0[jd.joint] then
            local cur = Studio.PosedParts[jd.joint] or {x = 0, y = 0, z = 0}
            cur.z = v
            Studio.PosedParts[jd.joint] = cur
            joint.C0 = Studio.OriginalC0[jd.joint] * CFrame.Angles(math.rad(cur.x), math.rad(cur.y), math.rad(cur.z))
        end
    end)
    ord = ord + 1
end

ActionBtn(ps, "Reset All Poses", "ğŸ”„", ord, function()
    for jointName, origC0 in pairs(Studio.OriginalC0) do
        local joint = FindJoint(jointName)
        if joint then joint.C0 = origC0 end
    end
    Studio.PosedParts = {}
    Notify("ğŸ”„ Reset", "All poses cleared", 2, TH.Good)
end)

