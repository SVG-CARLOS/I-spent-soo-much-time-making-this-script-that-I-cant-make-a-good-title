Section(ov, "SCENE CLEANUP", 8)

Toggle(ov, "Hide Other Players", "ğŸ‘¥", 9, function(on)
    Studio.HidePlayers = on
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LP and player.Character then
            for _, part in pairs(player.Character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Transparency = on and 1 or 0
                elseif part:IsA("Decal") or part:IsA("Texture") then
                    part.Transparency = on and 1 or 0
                end
            end
        end
    end
    Notify(on and "ğŸ‘¥ Players Hidden" or "ğŸ‘¥ Players Visible", "", 2, on and TH.Accent or TH.Good)
end)

Toggle(ov, "Hide Nametags", "ğŸ·ï¸", 10, function(on)
    Studio.NametagsHidden = on
    for _, player in pairs(Players:GetPlayers()) do
        if player.Character then
            local head = player.Character:FindFirstChild("Head")
            if head then
                for _, bg in pairs(head:GetChildren()) do
                    if bg:IsA("BillboardGui") then
                        bg.Enabled = not on
                    end
                end
            end
        end
    end
    Notify(on and "ğŸ·ï¸ Tags Hidden" or "ğŸ·ï¸ Tags Shown", "", 2, on and TH.Accent or TH.Good)
end)

