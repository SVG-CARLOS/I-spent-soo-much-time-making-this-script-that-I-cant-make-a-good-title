    local root = GetRoot()
    if not root then return end
    local part = Instance.new("Part")
    part.Name = "StudioProp_Glass"
    part.Size = Vector3.new(15, 10, 0.5)
    part.CFrame = root.CFrame * CFrame.new(0, 5, -8)
    part.Anchored = true
