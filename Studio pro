local cm = Pages["Camera"]

Section(cm, "FREECAM", 1)

local setFreecam = Toggle(cm, "Freecam Mode", "ğŸ¥", 2, function(on)
    Studio.FreecamOn = on
    if on then
        Studio.FreecamCF = Camera.CFrame
        Camera.CameraType = Enum.CameraType.Scriptable
        Notify("ğŸ¥ Freecam ON", IsMobile and "Use joystick" or "WASD QE to move", 3, TH.Accent)
    else
        Camera.CameraType = Enum.CameraType.Custom
        Notify("ğŸ¥ Freecam OFF", "Back to default", 2, TH.Bad)
    end
end)

MakeSlider(cm, "Freecam Speed", "ğŸï¸", 0.1, 10, 1, 0.1, 3, function(v)
    Studio.FreecamSpeed = v
end)

MakeSlider(cm, "Field of View", "ğŸ”­", 10, 120, 70, 1, 4, function(v)
    Studio.CamFOV = v
    Camera.FieldOfView = v
end)

Section(cm, "CAMERA SLOTS (Save/Load)", 6)

for i = 1, 5 do
    local row = Instance.new("Frame")
    row.Size = UDim2.new(1, 0, 0, 32)
    row.BackgroundColor3 = TH.Card
    row.BorderSizePixel = 0
    row.LayoutOrder = 6 + i
    row.Parent = cm
    Corner(row, 8)

    local lbl = Instance.new("TextLabel")
    lbl.Size = UDim2.new(0, 60, 1, 0)
    lbl.Position = UDim2.new(0, 8, 0, 0)
    lbl.BackgroundTransparency = 1
    lbl.Text = "ğŸ“Œ Slot "..i
    lbl.Font = Enum.Font.GothamSemibold
    lbl.TextSize = 10
    lbl.TextColor3 = TH.Text
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Parent = row

    local statusLbl = Instance.new("TextLabel")
    statusLbl.Size = UDim2.new(0, 40, 1, 0)
    statusLbl.Position = UDim2.new(0, 68, 0, 0)
    statusLbl.BackgroundTransparency = 1
    statusLbl.Text = "Empty"
    statusLbl.Font = Enum.Font.Gotham
    statusLbl.TextSize = 8
    statusLbl.TextColor3 = TH.TextDim
    statusLbl.TextXAlignment = Enum.TextXAlignment.Left
    statusLbl.Parent = row

    local saveBtn = Instance.new("TextButton")
    saveBtn.Size = UDim2.new(0, 42, 0, 22)
    saveBtn.Position = UDim2.new(1, -96, 0.5, -11)
    saveBtn.BackgroundColor3 = TH.Green
    saveBtn.BorderSizePixel = 0
    saveBtn.Text = "Save"
    saveBtn.Font = Enum.Font.GothamBold
    saveBtn.TextSize = 9
    saveBtn.TextColor3 = Color3.new(1, 1, 1)
    saveBtn.AutoButtonColor = false
    saveBtn.ZIndex = 2
    saveBtn.Parent = row
    Corner(saveBtn, 5)

    local loadBtn = Instance.new("TextButton")
    loadBtn.Size = UDim2.new(0, 42, 0, 22)
    loadBtn.Position = UDim2.new(1, -48, 0.5, -11)
    loadBtn.BackgroundColor3 = TH.Accent
    loadBtn.BorderSizePixel = 0
    loadBtn.Text = "Load"
    loadBtn.Font = Enum.Font.GothamBold
    loadBtn.TextSize = 9
    loadBtn.TextColor3 = Color3.new(1, 1, 1)
    loadBtn.AutoButtonColor = false
    loadBtn.ZIndex = 2
    loadBtn.Parent = row
    Corner(loadBtn, 5)

    saveBtn.MouseButton1Click:Connect(function()
        Studio.CamSlots[i] = {cf = Camera.CFrame, fov = Camera.FieldOfView}
        statusLbl.Text = "Saved"
        statusLbl.TextColor3 = TH.Good
        Notify("ğŸ’¾ Saved", "Camera slot "..i, 1.5, TH.Good)
    end)

    loadBtn.MouseButton1Click:Connect(function()
        local slot = Studio.CamSlots[i]
        if slot then
            Camera.CameraType = Enum.CameraType.Scriptable
            Studio.FreecamOn = true
            setFreecam(true)
            TweenService:Create(Camera, TweenInfo.new(Studio.CamSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
                CFrame = slot.cf,
                FieldOfView = slot.fov
            }):Play()
            Notify("ğŸ“Œ Loaded", "Camera slot "..i, 1.5, TH.Accent)
        else
            Notify("âŒ Empty", "Save first", 1.5, TH.Bad)
        end
    end)
end

