ActionBtn(cm, "Front Face", "ğŸ˜Š", 21, function()
    local root = GetRoot(); if not root then return end
    Camera.CameraType = Enum.CameraType.Scriptable
    Studio.FreecamOn = true; setFreecam(true)
    local target = root.CFrame * CFrame.new(0, 1.5, 8)
    TweenService:Create(Camera, TweenInfo.new(Studio.CamSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
        CFrame = CFrame.lookAt(target.Position, root.Position + Vector3.new(0, 1.5, 0))
    }):Play()
    Notify("ğŸ˜Š Front", "Facing camera", 1.5, TH.Accent)
end)

