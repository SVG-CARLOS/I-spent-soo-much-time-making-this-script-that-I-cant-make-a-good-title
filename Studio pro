    Camera.CameraType = Enum.CameraType.Scriptable
    Studio.FreecamOn = true; setFreecam(true)
    local target = root.CFrame * CFrame.new(2, 2, 3)
    TweenService:Create(Camera, TweenInfo.new(Studio.CamSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
        CFrame = CFrame.lookAt(target.Position, (root.CFrame * CFrame.new(0, 1, -20)).Position)
    }):Play()
    Notify("ğŸ¯ Over Shoulder", "Third-person cinematic", 1.5, TH.Accent)
end)

ActionBtn(cm, "Dutch Angle", "ğŸ“", 27, function()
    local root = GetRoot(); if not root then return end
    Camera.CameraType = Enum.CameraType.Scriptable
    Studio.FreecamOn = true; setFreecam(true)
    local pos = root.CFrame * CFrame.new(5, 3, 8)
    local lookAt = root.Position + Vector3.new(0, 1, 0)
    local cf = CFrame.lookAt(pos.Position, lookAt) * CFrame.Angles(0, 0, math.rad(15))
    TweenService:Create(Camera, TweenInfo.new(Studio.CamSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {CFrame = cf}):Play()
    Notify("ğŸ“ Dutch Angle", "Tilted dramatic", 1.5, TH.Accent)
end)

ActionBtn(cm, "Reset Camera", "ğŸ”„", 28, function()
    Studio.FreecamOn = false
    Studio.OrbitOn = false
    setFreecam(false)
    setOrbit(false)
    Camera.CameraType = Enum.CameraType.Custom
    Camera.FieldOfView = 70
    Studio.CamFOV = 70
    Notify("ğŸ”„ Reset", "Default camera", 2, TH.Good)
end)

