    TweenService:Create(Camera, TweenInfo.new(Studio.CamSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
        CFrame = CFrame.lookAt(target.Position, head.Position),
        FieldOfView = 40
    }):Play()
    Notify("ğŸ” Closeup", "Face detail shot", 1.5, TH.Accent)
end)

