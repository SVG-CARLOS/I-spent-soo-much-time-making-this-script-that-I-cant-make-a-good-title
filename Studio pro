-- Pulsing rec dot
task.spawn(function()
    while Gui.Parent do
        TW(recDot, {BackgroundTransparency = 0.7}, 0.8)
        task.wait(0.8)
        TW(recDot, {BackgroundTransparency = 0}, 0.8)
        task.wait(0.8)
    end
end)

