    ClearShaderEffects()
    for k, v in pairs(OrigLighting) do pcall(function() Lighting[k] = v end) end
    activePresetLbl.Text = "  Active: None"
    Notify("ğŸ”„ Reset", "All shaders removed", 2, TH.Good)
end)
sOrd = sOrd + 1

