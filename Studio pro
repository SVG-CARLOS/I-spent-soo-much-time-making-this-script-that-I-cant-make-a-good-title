    ClearShaderEffects()
    Lighting.Brightness = 3; Lighting.ClockTime = 14; Lighting.FogEnd = 1e6
    Lighting.GlobalShadows = false; Lighting.Ambient = Color3.fromRGB(200, 200, 200)
    Lighting.OutdoorAmbient = Color3.fromRGB(200, 200, 200)
