local sOrd = 3
for i, p in ipairs(ShaderPresets) do
    if i == 1 then Section(sh, "NATURE & TIME", sOrd); sOrd = sOrd + 1 end
    if i == 4 then Section(sh, "MOOD & STYLE", sOrd); sOrd = sOrd + 1 end
    if i == 8 then Section(sh, "ENVIRONMENTS", sOrd); sOrd = sOrd + 1 end
    if i == 11 then Section(sh, "SPECIAL", sOrd); sOrd = sOrd + 1 end

    local b = Instance.new("TextButton")
    b.Size = UDim2.new(1, 0, 0, 42)
    b.BackgroundColor3 = TH.Card
    b.BorderSizePixel = 0
    b.LayoutOrder = sOrd
    b.Text = ""
    b.AutoButtonColor = false
    b.Parent = sh
    Corner(b, 9)

    local emo = Instance.new("TextLabel")
    emo.Size = UDim2.new(0, 26, 1, 0)
    emo.Position = UDim2.new(0, 7, 0, 0)
    emo.BackgroundTransparency = 1
    emo.Text = p.emoji
    emo.TextSize = 16
    emo.Font = Enum.Font.SourceSans
    emo.Parent = b

    local nm = Instance.new("TextLabel")
    nm.Size = UDim2.new(1, -44, 0, 16)
    nm.Position = UDim2.new(0, 35, 0, 4)
    nm.BackgroundTransparency = 1
    nm.Text = p.name
    nm.Font = Enum.Font.GothamBold
    nm.TextSize = 11
    nm.TextColor3 = TH.Text
    nm.TextXAlignment = Enum.TextXAlignment.Left
    nm.Parent = b

    local desc = Instance.new("TextLabel")
    desc.Size = UDim2.new(1, -44, 0, 12)
    desc.Position = UDim2.new(0, 35, 0, 21)
    desc.BackgroundTransparency = 1
    desc.Text = p.desc
    desc.Font = Enum.Font.Gotham
    desc.TextSize = 8
    desc.TextColor3 = TH.TextDim
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.Parent = b

    b.MouseEnter:Connect(function() TW(b, {BackgroundColor3 = TH.Accent}, 0.12); TW(nm, {TextColor3 = TH.TextAct}, 0.12); TW(desc, {TextColor3 = TH.TextAct}, 0.12) end)
    b.MouseLeave:Connect(function() TW(b, {BackgroundColor3 = TH.Card}, 0.12); TW(nm, {TextColor3 = TH.Text}, 0.12); TW(desc, {TextColor3 = TH.TextDim}, 0.12) end)
    b.MouseButton1Click:Connect(function() ApplyShaderPreset(p.name, p.s) end)

    sOrd = sOrd + 1
end

Section(sh, "QUICK ACTIONS", sOrd)
sOrd = sOrd + 1

