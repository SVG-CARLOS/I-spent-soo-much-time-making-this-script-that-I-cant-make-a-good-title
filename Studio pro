-- ğŸ¬ SCENE TAB
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
local sc = Pages["Scene"]

Section(sc, "SPAWN PROPS", 1)

local function SpawnProp(name, size, color, material, shape)
    local root = GetRoot()
    if not root then return end
    local part = Instance.new("Part")
    part.Name = "StudioProp_"..name
    part.Size = size
    part.CFrame = root.CFrame * CFrame.new(0, size.Y/2, -10)
    part.Anchored = true
    part.Color = color
    part.Material = material or Enum.Material.SmoothPlastic
    if shape then part.Shape = shape end
    part.Parent = workspace
    Notify("ğŸ“¦ Spawned", name, 2, TH.Accent)
end

ActionBtn(sc, "Cube", "ğŸŸ«", 2, function() SpawnProp("Cube", Vector3.new(6, 6, 6), Color3.fromRGB(120, 120, 120)) end)
ActionBtn(sc, "Sphere", "âšª", 3, function() SpawnProp("Sphere", Vector3.new(6, 6, 6), Color3.fromRGB(200, 200, 200), Enum.Material.SmoothPlastic, Enum.PartType.Ball) end)
ActionBtn(sc, "Cylinder", "ğŸ”µ", 4, function() SpawnProp("Cylinder", Vector3.new(6, 6, 6), Color3.fromRGB(100, 150, 200), Enum.Material.SmoothPlastic, Enum.PartType.Cylinder) end)
ActionBtn(sc, "Platform", "ğŸŸ©", 5, function() SpawnProp("Platform", Vector3.new(30, 1, 30), Color3.fromRGB(80, 80, 85), Enum.Material.Concrete) end)
ActionBtn(sc, "Wall", "ğŸ§±", 6, function() SpawnProp("Wall", Vector3.new(20, 12, 1), Color3.fromRGB(160, 140, 120), Enum.Material.Brick) end)
ActionBtn(sc, "Neon Cube", "ğŸ’œ", 7, function() SpawnProp("NeonCube", Vector3.new(4, 4, 4), Color3.fromRGB(170, 0, 255), Enum.Material.Neon) end)
