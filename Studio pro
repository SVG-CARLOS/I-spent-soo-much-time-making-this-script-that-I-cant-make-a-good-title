Toggle(ov, "REC Indicator", "ğŸ”´", 2, function(on)
    Studio.RecIndicator = on
    if on then
        local rec = Instance.new("Frame")
        rec.Name = "RECIndicator"
        rec.Size = UDim2.new(0, 80, 0, 28)
        rec.Position = UDim2.new(0, 20, 0, 20)
        rec.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
        rec.BackgroundTransparency = 0.3
        rec.BorderSizePixel = 0
        rec.ZIndex = 50
        rec.Parent = Gui
        Corner(rec, 6)

        local dot = Instance.new("Frame")
        dot.Size = UDim2.new(0, 10, 0, 10)
        dot.Position = UDim2.new(0, 8, 0.5, -5)
        dot.BackgroundColor3 = TH.Rec
        dot.BorderSizePixel = 0
        dot.ZIndex = 51
        dot.Parent = rec
        Corner(dot, 5)

        local recTxt = Instance.new("TextLabel")
        recTxt.Size = UDim2.new(1, -26, 1, 0)
        recTxt.Position = UDim2.new(0, 22, 0, 0)
        recTxt.BackgroundTransparency = 1
        recTxt.Text = "REC"
        recTxt.Font = Enum.Font.GothamBold
        recTxt.TextSize = 14
        recTxt.TextColor3 = TH.Rec
        recTxt.TextXAlignment = Enum.TextXAlignment.Left
        recTxt.ZIndex = 51
        recTxt.Parent = rec

        -- Pulse
        task.spawn(function()
            while rec.Parent do
                TW(dot, {BackgroundTransparency = 0.8}, 0.6)
                task.wait(0.6)
                TW(dot, {BackgroundTransparency = 0}, 0.6)
                task.wait(0.6)
            end
        end)

        Notify("ğŸ”´ REC", "Recording indicator shown", 2, TH.Rec)
    else
        local rec = Gui:FindFirstChild("RECIndicator")
        if rec then rec:Destroy() end
        Notify("ğŸ”´ REC OFF", "", 2, TH.Bad)
    end
end)

