for _, preset in ipairs(PosePresets) do
    ActionBtn(ps, preset.name, preset.emoji, ord, function()
        if not Studio.PoseMode then
            Notify("âš ï¸ Warning", "Enable Pose Mode first!", 2, TH.Yellow)
            return
        end
        -- Reset first
        for jn, oc in pairs(Studio.OriginalC0) do
            local j = FindJoint(jn)
            if j then j.C0 = oc end
        end
        Studio.PosedParts = {}

        -- Apply preset
        for jointName, angles in pairs(preset.poses) do
            SaveOrigC0(jointName)
            local joint = FindJoint(jointName)
            if joint and Studio.OriginalC0[jointName] then
                Studio.PosedParts[jointName] = angles
                joint.C0 = Studio.OriginalC0[jointName] * CFrame.Angles(math.rad(angles.x), math.rad(angles.y), math.rad(angles.z))
            end
        end
        Notify(preset.emoji.." "..preset.name, "Pose applied!", 2, TH.Accent)
    end)
    ord = ord + 1
end

