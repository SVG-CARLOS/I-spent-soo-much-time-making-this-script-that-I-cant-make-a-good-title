local gs = Pages["Screen"]

Section(gs, "GREEN SCREEN", 1)

Toggle(gs, "Spawn Green Screen", "ğŸŸ©", 2, function(on)
    Studio.GreenScreenOn = on
    if on then
        local root = GetRoot()
        if not root then Notify("âŒ Error", "No character", 2, TH.Bad) return end

        if Studio.GreenScreen then Studio.GreenScreen:Destroy() end

        local model = Instance.new("Model")
        model.Name = "StudioGreenScreen"

        -- Back wall
        local back = Instance.new("Part")
        back.Size = Studio.ScreenSize
        back.CFrame = root.CFrame * CFrame.new(0, Studio.ScreenSize.Y/2 - 3, -Studio.ScreenDist)
        back.Anchored = true
        back.CanCollide = false
        back.Material = Enum.Material.SmoothPlastic
        back.Color = Studio.ScreenColor
        back.Name = "Back"
        back.Parent = model

        -- Floor
        local floor = Instance.new("Part")
        floor.Size = Vector3.new(Studio.ScreenSize.X, 1, Studio.ScreenSize.X * 0.6)
        floor.CFrame = root.CFrame * CFrame.new(0, -3, -Studio.ScreenDist + Studio.ScreenSize.X * 0.3 - Studio.ScreenSize.Z/2)
        floor.Anchored = true
        floor.CanCollide = true
        floor.Material = Enum.Material.SmoothPlastic
        floor.Color = Studio.ScreenColor
        floor.Name = "Floor"
        floor.Parent = model

        -- Left wall
        local left = Instance.new("Part")
        left.Size = Vector3.new(1, Studio.ScreenSize.Y, Studio.ScreenSize.X * 0.6)
        left.CFrame = root.CFrame * CFrame.new(-Studio.ScreenSize.X/2, Studio.ScreenSize.Y/2 - 3, -Studio.ScreenDist + Studio.ScreenSize.X * 0.3 - Studio.ScreenSize.Z/2)
        left.Anchored = true
        left.CanCollide = false
        left.Material = Enum.Material.SmoothPlastic
        left.Color = Studio.ScreenColor
        left.Name = "Left"
        left.Parent = model

        -- Right wall
        local right = Instance.new("Part")
        right.Size = Vector3.new(1, Studio.ScreenSize.Y, Studio.ScreenSize.X * 0.6)
        right.CFrame = root.CFrame * CFrame.new(Studio.ScreenSize.X/2, Studio.ScreenSize.Y/2 - 3, -Studio.ScreenDist + Studio.ScreenSize.X * 0.3 - Studio.ScreenSize.Z/2)
        right.Anchored = true
        right.CanCollide = false
        right.Material = Enum.Material.SmoothPlastic
        right.Color = Studio.ScreenColor
        right.Name = "Right"
        right.Parent = model

        -- Ceiling
        local ceiling = Instance.new("Part")
        ceiling.Size = Vector3.new(Studio.ScreenSize.X, 1, Studio.ScreenSize.X * 0.6)
        ceiling.CFrame = root.CFrame * CFrame.new(0, Studio.ScreenSize.Y - 3, -Studio.ScreenDist + Studio.ScreenSize.X * 0.3 - Studio.ScreenSize.Z/2)
        ceiling.Anchored = true
        ceiling.CanCollide = false
        ceiling.Material = Enum.Material.SmoothPlastic
        ceiling.Color = Studio.ScreenColor
        ceiling.Name = "Ceiling"
        ceiling.Parent = model

        model.Parent = workspace
        Studio.GreenScreen = model

        Notify("ğŸŸ© Green Screen", "Spawned behind you!", 3, TH.Green)
    else
        if Studio.GreenScreen then
            Studio.GreenScreen:Destroy()
            Studio.GreenScreen = nil
        end
        Notify("ğŸŸ© Removed", "Green screen destroyed", 2, TH.Bad)
    end
end)

