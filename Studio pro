    }},
    {name = "Power Pose", emoji = "ğŸ¦¸", poses = {
        RightShoulder = {x = 0, y = 0, z = -45},
        LeftShoulder = {x = 0, y = 0, z = 45},
        Waist = {x = -5, y = 0, z = 0},
